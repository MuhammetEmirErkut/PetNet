<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shape with a solid color and rounded corners (for stroke) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red"></solid>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Inner shape with a solid color and rounded corners (for content) -->
    <item android:top="2dp" android:left="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"></solid>
            <corners android:radius="7dp"></corners>
            <!-- Add stroke to the inner shape -->
            <stroke
                android:width="2dp"
                android:color="@color/red"/> <!-- Change color as needed -->

        </shape>
    </item>

</layer-list>
