<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Arka plan - backgroundsoft_color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundsoft_color"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- 2dp çizgi (stroke) - backgrounddark_color -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgrounddark_color"/>
            <corners android:radius="18dp"/> <!-- Dikkat: burada radius miktarını düşürdük, böylece çizgiyi içeri alıyoruz -->
        </shape>
    </item>
</layer-list>
