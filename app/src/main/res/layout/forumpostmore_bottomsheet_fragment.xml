<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounddark_color"
    android:orientation="vertical">

    <View
        android:id="@+id/view5"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/backgroundsoft_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="@drawable/forumsearch_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/saveButtonImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/postsave" />

            <TextView
                android:id="@+id/saveButtonUselessTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Save Post" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/forumsearch_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/infoButtonImageView"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/info" />

            <TextView
                android:id="@+id/infoButtonUselessTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Info Post" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/forumsearch_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/postMoreAccountImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/accountinfo" />

            <TextView
                android:id="@+id/postMoreAccountUselessTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Information about the Account"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:id="@+id/view8"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/bone_white" />

        <LinearLayout
            android:id="@+id/deleteThePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/deletePostImageView"
                android:layout_width="45dp"
                android:layout_height="39dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:src="@drawable/trash" />

            <TextView
                android:id="@+id/deletePostUselessTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="102dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Delete the post"
                android:textColor="@color/red"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/bone_white" />

        <LinearLayout
            android:id="@+id/reportThePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reportImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:src="@drawable/complaint" />

            <TextView
                android:id="@+id/reportUselessTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="100dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Report the post"
                android:textColor="@color/red"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportReasonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view7"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/bone_white" />

            <TextView
                android:id="@+id/aboutReportTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/soft_red"
                android:textSize="17sp"
                android:text="Briefly state your reason for complaint;" />

            <EditText
                android:id="@+id/reportReasonEditText"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="21dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:paddingStart="11dp"
                android:gravity="start"
                android:ems="10"
                android:inputType="text"
                android:hint="Report Reason"
                android:textColorHint="@color/bone_white"
                android:background="@drawable/softgray_bonewhitestroke_background"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/sendReportTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="28dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/red"
                android:textSize="17sp"
                android:text="Send Report" />

        </LinearLayout>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>