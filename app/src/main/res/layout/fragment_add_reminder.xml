<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounddark_color"
    tools:context=".Fragments.HomeFragments.AddReminderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addreminder_back_button"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/baseline_west_24" />

        <EditText
            android:id="@+id/reminderNameEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:background="@drawable/accountplaintext_background"
            android:ems="10"
            android:hint="Reminder Title"
            android:textSize="24sp"
            android:inputType="text"
            android:paddingStart="13dp"
            android:textColor="@color/bone_white"
            android:textColorHint="@color/bone_white" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:timePickerMode="spinner"
            android:background="@drawable/whiteradius_background"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="76dp"
            android:layout_weight="1"
            android:textColor="@color/bone_white"
            android:text="Choose Pet" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/petReminderSpinner"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="76dp"
            android:paddingStart="9dp"
            android:ems="10"
            android:background="@drawable/forumsearch_background"
            android:completionThreshold="1"
            >

        </androidx.appcompat.widget.AppCompatSpinner>

        <Button
            android:id="@+id/setAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:layout_gravity="end"
            android:layout_below="@id/timePicker"
            android:layout_centerHorizontal="true"
            android:background="@drawable/whiteradius_background"
            android:layout_marginTop="50dp"
            android:textColor="@color/backgrounddark_color"
            android:text="Set Alarm" />

    </LinearLayout>


</FrameLayout>