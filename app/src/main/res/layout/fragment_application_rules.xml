<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounddark_color"
    tools:context=".Fragments.AccountFragments.ApplicationRulesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/applicationrules_back_button"
                    android:layout_width="100dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/baseline_west_24" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:paddingEnd="36dp"
                    android:text="Application Rules"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Respectful Language Use:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Use respectful language towards other members."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Express your arguments thoughtfully and avoid personal attacks in discussions."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="No Advertising or Spam:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Advertising on the forum is prohibited. Posting commercial content or spam that directs to other sites is not allowed."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Inappropriate Content -->
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Inappropriate Content:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Posting pornography, using profanity, or sharing content contrary to moral values is not allowed."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Safety of Your Pets -->
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Safety of Your Pets:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Share accurate and reliable information about the safety and health of your pets."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Emphasize the importance of seeking professional help immediately from a veterinarian in emergency situations."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Tolerance in Discussions -->
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Tolerance in Discussions:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Show respect for different opinions and strive to maintain a tolerant environment."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Focus on information and experience sharing rather than personal attacks during discussions."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Topic Titles and Categories -->
            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Topic Titles and Categories:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Clearly state topic titles in an explanatory manner."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Open topics in the relevant category."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Sharing of Personal Information -->
            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Sharing of Personal Information:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Use the private messaging system instead of openly sharing personal contact information."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Follow Moderator Instructions -->
            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Follow Moderator Instructions:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Adhere to moderator instructions and follow guidelines."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Copyright and Materials -->
            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Copyright and Materials:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Refrain from sharing copyrighted materials owned by others."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Respect the copyright of your own content."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <!-- Help and Support -->
            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Help and Support:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="- Encourage a supportive environment where members can seek and offer help."
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <View
                android:id="@+id/view9"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@color/backgrounddark_color"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>