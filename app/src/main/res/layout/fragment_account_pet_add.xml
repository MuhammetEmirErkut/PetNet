<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounddark_color"
    tools:context=".Fragments.AccountFragments.AccountPetAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/petadd_backButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/baseline_west_24" />

        <com.muham.petv01.Components.RoundImageView
            android:id="@+id/petTypeImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/dog" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="Your Pet Information" />

        <EditText
            android:id="@+id/petNameEditText"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="42dp"
            android:paddingStart="15dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/forumsearch_background"
            android:textColor="@color/white"
            android:textColorHint="@color/bone_white"
            android:hint="Pet Name" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/petTypeEditText"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="22dp"
            android:paddingStart="9dp"
            android:ems="10"
            android:background="@drawable/forumsearch_background"
            android:completionThreshold="1"
            android:hint="Pet Type" />

        <EditText
            android:id="@+id/petAgeEditText"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="22dp"
            android:paddingStart="15dp"
            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/bone_white"
            android:background="@drawable/forumsearch_background"
            android:hint="Pet Age"
            android:inputType="date" />

        <TextView
            android:id="@+id/addPetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="53dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </LinearLayout>
</FrameLayout>