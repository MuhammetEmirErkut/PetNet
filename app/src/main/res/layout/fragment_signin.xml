<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounddark_color"
    tools:context=".Accounts.SigninFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/SigninUselessImageView"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/logoaccounts" />

        <TextView
            android:id="@+id/SigninUselessTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Sign in"
            android:textColor="@color/white"
            android:textSize="39sp" />

        <EditText
            android:id="@+id/signinNameEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/accountplaintext_background"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:paddingStart="13dp"
            android:textColor="@color/bone_white"
            android:textColorHint="@color/bone_white" />

        <EditText
            android:id="@+id/signinSurnameEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/accountplaintext_background"
            android:ems="10"
            android:hint="Surname"
            android:inputType="text"
            android:paddingStart="13dp"
            android:textColor="@color/bone_white"
            android:textColorHint="@color/bone_white" />

        <EditText
            android:id="@+id/signinEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/accountplaintext_background"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:paddingStart="13dp"
            android:textColor="@color/bone_white"
            android:textColorHint="@color/bone_white" />

        <EditText
            android:id="@+id/signinPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/accountplaintext_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:paddingStart="13dp"
            android:textColor="@color/bone_white"
            android:textColorHint="@color/bone_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signinButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@color/backgrounddark_color"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>