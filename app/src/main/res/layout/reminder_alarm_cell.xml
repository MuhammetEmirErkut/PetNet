<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="11dp"
    android:background="@drawable/whiteradius_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/alarmtest" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarmNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Pet Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/alarmTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="9dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="12:00"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/deleteAlarmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:gravity="end"
        android:text="Delete"
        android:textColor="@color/soft_red"
        android:textSize="12sp" />

</androidx.appcompat.widget.LinearLayoutCompat>